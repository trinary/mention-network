<div id="tweet-item-{{id}}" class="tweet-item">
  <div class="content">

    <div class="user-info">
      <div class="left">
        <canvas class="usericon" width="24", height="24">
      </div>
      <div class="left">
        <span class="user-name">@{{name}}</span>
      </div>
    </div>

    {{#if tweet }}
    <p class="tweet-text">{{tweet.body}}</p>
    {{#if geo }} 
      <canvas class="tweet-map" border="0"></canvas>
    {{/if}}

    <div class="extras">
      {{#if tweet.gnip }} 
      <div class="gnip-info">
        <br/>
        <ul>
          {{#each tweet.gnip.matching_rules}}
          <h2>Matched "{{tag}}"</h2>
          {{/each}}
        </ul>

        {{#if tweet.gnip.language }}
        <h2>Language: {{language}}</h2>
        {{/if}}
      </div>
      {{/if}}
    {{/if}}
    </div>
    <!-- {{id}} -->
  </div>
</div>
